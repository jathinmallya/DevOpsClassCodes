pipeline{
      agent any
      tools {
      maven 'my_maven'
      }
      stages {
          stage('clone sources'){
          steps {
                git url: 'https://github.com/jathinmallya/DevOpsClassCodes.git'       
                }
          }
          stage ('compile') {
              steps {
                 sh 'mvn compile'
              }
          }
          stage ('code review'){
              steps {
                 sh 'mvn -P metrics pmd:pmd'  
              }
          }
          stage ('unit_test'){
              steps {
                  sh 'mvn test'
              }
          }
          stage ('metric_check') {
            steps {
              sh 'mvn cobertura"cobertura -D cobertura-report:format=xml'
            }
          }
          stage ('package'){
            steps {
              sh 'mvn package'
            }
            
          }
      }
}
